<?xml version="1.0" encoding="GBK"?>
<web-app>
	<!-- servlet 信息配置  java类信息 -->
	<servlet>
		<servlet-name>test</servlet-name>
		<!-- 根据类名得到类的实例 Class.forName(类名).newIntance() -->
		<servlet-class>ee.com.bjsxt1.servlet.TestServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>ee.com.bjsxt1.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>abcd</servlet-name>
		<servlet-class>ee.com.bjsxt1.servlet.DeleteServlet</servlet-class>
	</servlet>

	
	<!-- servlet映射配置 注重url映射 -->
	<servlet-mapping>
		<!-- 关联Servlet元素用 -->
		<servlet-name>test</servlet-name>
		<!-- url映射 -->
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>abc</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>



</web-app>